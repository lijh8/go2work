// golang.go extension compiles the current package,
// it can run and debug from the main function in current file.
// the println output shows on debug console pane.
//
// turn off tasks.json when debug, it switch to terminal pane always.
// it is too annoying. turn on tasks.json only when do custom build.

// https://github.com/golang/vscode-go/wiki/debugging ,

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug", // main package
            "program": "${fileDirname}", // main package
            // "mode": "exec", // executable
            // "program": "${fileDirname}/${fileBasenameNoExtension}", // executable
            "args": [], //
            // "args": ["12345"], // server
            // "args": ["192.168.1.3", "12345", "clientABC"], // client
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/src/foo",
                "DYLD_LIBRARY_PATH": "${workspaceFolder}/src/foo",
            },
            "cwd": "${fileDirname}",
            // "preLaunchTask": "build", // turn off tasks.json when debug
        }
    ]
}
